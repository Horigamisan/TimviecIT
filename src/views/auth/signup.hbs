<div class='back-to-home rounded d-none d-sm-block'>
	<a
		href='/'
		class='btn btn-icon btn-soft-primary d-flex justify-content-center align-items-center'
	><i data-feather='home' class='icons'></i></a>
</div>

<!-- Hero Start -->
<section class='bg-auth-home d-table w-100 p-0'>
	<div class='container'>
		<div class='row align-items-center'>
			<div class='col-lg-7 col-md-6'>
				<div class='me-lg-5'>
					<img
						src='/images/signup.svg'
						class='img-fluid d-block mx-auto'
						alt=''
					/>
				</div>
			</div>
			<div class='col-lg-5 col-md-6'>
				<div class='card shadow rounded border-0'>
					<div class='card-body'>
						<h4 class='card-title text-center'>Đăng ký</h4>
						<form class='login-form mt-4' method='post' id='client-signup-form'>
							<div class='row'>
								<div class='col-md-12'>
									<div class='mb-3'>
										<label class='form-label'>Họ và tên
											<span class='text-danger'>*</span></label>
										<div class='form-icon position-relative'>

											<input
												type='text'
												class='form-control ps-5'
												placeholder='Nhập tên'
												name='name'
												required=''
											/>
										</div>
									</div>
								</div><!--end col-->

								<div class='col-md-12'>
									<div class='mb-3'>
										<label class='form-label'>Email
											<span class='text-danger'>*</span></label>
										<div class='form-icon position-relative'>

											<input
												type='email'
												class='form-control ps-5'
												placeholder='Nhập email'
												name='email'
												required=''
											/>
										</div>
									</div>
								</div><!--end col-->

								<div class='col-md-12'>
									<div class='mb-3'>
										<label class='form-label'>Mật khẩu
											<span class='text-danger'>*</span></label>
										<div class='form-icon position-relative'>

											<input
												type='password'
												name='password'
												class='form-control ps-5'
												placeholder='Nhập mật khẩu'
												required=''
											/>
										</div>
									</div>
								</div><!--end col-->

								<div class='col-md-12'>
									<div class='mb-3'>
										<label class='form-label'>Mật khẩu xác nhận
											<span class='text-danger'>*</span></label>
										<div class='form-icon position-relative'>

											<input
												type='password'
												name='passwordConfirm'
												class='form-control ps-5'
												placeholder='Nhập lại mật khẩu'
												required=''
											/>
										</div>
									</div>
								</div><!--end col-->

								<div class='col-md-12'>
									<div class='mb-3'>
										<label class='form-label'>Số điện thoại
											<span class='text-danger'>*</span></label>
										<div class='form-icon position-relative'>

											<input
												type='tel'
												name='phone'
												class='form-control ps-5'
												placeholder='0898xxxxxx'
												pattern="[0][0-9]{9}"
												required=''
											/>
										</div>
									</div>
								</div><!--end col-->

								<div class='col-md-12'>
									<div class='mb-3'>
										<label class='form-label'>Ngày sinh
											<span class='text-danger'>*</span></label>
										<div class='form-icon position-relative'>
											<input
												type='date'
												name='birthday'
												class='form-control ps-5'
												required=''
											/>
										</div>
									</div>
								</div><!--end col-->

								
								{{#if flash}}
									{{#if flash.isFormError}}
										<div class='col-lg-12'>
											<div class='mb-3 text-danger'>
												{{#each flash.message}}
													<span>{{.}}<span/><br/>
												{{/each}}
											</div>
										</div><!--end col-->
									{{/if}}
								{{/if}}

								<div class='col-6 mb-0 mt-2'>
									<div class='d-grid'>
										<button
											class='btn btn-primary w-100'
											id='candidate-signup-btn'
										>Ứng viên</button>
									</div>
								</div>

								<div class='col-6 mb-0 mt-2'>
									<div class='d-grid'>
										<button
											class='btn btn-primary w-100'
											id='employer-signup-btn'
										>Nhà tuyển dụng</button>
									</div>
								</div>

								<div class='col-lg-12 mt-4 text-center'>
									<h6>Hoặc đăng ký với</h6>
									<div class='row mt-3'>
										<a href='/auth/oauth2' class='btn btn-light w-100'><i
												class='mdi mdi-google text-danger'
											></i>
											Google</a>
									</div>
								</div><!--end col-->

								<div class='mx-auto'>
									<p class='mb-0 mt-3'><small class='text-dark me-2'>Bạn đã có
											tài khoản ?</small>
										<a href='/auth/sign-in' class='text-primary fw-bold'>Đăng
											nhập</a></p>
								</div>
							</div><!--end row-->
						</form>
					</div>
				</div>
			</div>
			<!--end col-->
		</div><!--end row-->
	</div>
	<!--end container-->
</section><!--end section-->