<form action='/job_skills/add' method='post' id="add_job_skill">
    <div class="form-group">
        <label for="job_skill_name">Tên kỹ năng</label>
        <input type='text' name='name' placeholder="Chém gió..." id="job_skill_name"/>
    </div>

    <div class="form-group">
        <label for="job_skill_meta">Meta</label>
        <input type="text" disabled class="job_skill_meta" id="job_skill_meta">
    </div>

    <input type="hidden" name="meta" class="job_skill_meta">

    <button type="submit" class="btn btn-primary">Thêm</button>
</form>

<a href="/job_skills" class="btn btn-success">Tất cả kỹ năng</a>