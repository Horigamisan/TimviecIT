<section class='section'>
	<div class='container'>
		<div class='row'>
			<div class='col-lg-4 col-md-6 col-12'>
				<div class='sidebar sticky-bar p-4 rounded shadow'>
					<!-- SEARCH -->
					<form role='search' method='get' id="filter-form">
						<div class='widget'>
							<div class='input-group mb-3 border rounded'>
								<input
									type='text'
									id='search'
									name='search'
									class='form-control border-0 search-box'
									placeholder='Nhập từ khóa...'
									value="{{form.search}}"
								/>
							</div>
						</div>
						<!-- SEARCH -->
						{{! Loại công việc }}
						<div class='row'>
							<div class='widget mb-4 pb-4 border-bottom col-6'>
								<h5 class='widget-title'>Loại công việc</h5>
								<div class='mt-4 mb-0 ml-4'>
									<div>
										<input
											class='form-check-input work-type-box'
											type='radio'
											name='work_type'
											value='full-time'
											id='fulltime'
											{{#if (equals form.work_type 'full-time')}}checked{{/if}}
										/>
										<label class='form-check-label' for='fulltime'>Full Time</label>
									</div>

									<div>
										<input
											class='form-check-input work-type-box'
											type='radio'
											name='work_type'
											value='part-time'
											id='parttime'
											{{#if (equals form.work_type 'part-time')}}checked{{/if}}
										/>
										<label class='form-check-label' for='parttime'>Part Time</label>
									</div>

									<div>
										<input
											class='form-check-input work-type-box'
											type='radio'
											name='work_type'
											value='intern'
											id='intern'
											{{#if (equals form.work_type 'intern')}}checked{{/if}}
										/>
										<label class='form-check-label' for='intern'>Intern</label>
									</div>

									<div>
										<input
											class='form-check-input work-type-box'
											type='radio'
											name='work_type'
											value='remote'
											id='remote'
											{{#if (equals form.work_type 'remote')}}checked{{/if}}
										/>
										<label class='form-check-label' for='remote'>Remote</label>
									</div>
								</div>
							</div>

							{{! Kinh nghiệm }}
							<div class='widget mb-4 pb-4 border-bottom col-6'>
								<h5 class='widget-title'>Kinh nghiệm</h5>
								<div class='mt-4 mb-0 ml-4'>
									<div>
										<input
											class='form-check-input years-of-experience-box'
											type='radio'
											name='years_of_experience'
											value='0-1'
											id='0-1'
											{{#if (equals form.years_of_experience '0-1')}}checked{{/if}}
										/>
										<label class='form-check-label' for='fulltime'>Dưới 1 năm</label>
									</div>

									<div>
										<input
											class='form-check-input years-of-experience-box'
											type='radio'
											name='years-of-experience'
											value='1-3'
											id='1-3'
											{{#if (equals form.years_of_experience '1-3')}}checked{{/if}}
										/>
										<label class='form-check-label' for='parttime'>1-3 năm</label>
									</div>

									<div>
										<input
											class='form-check-input years-of-experience-box'
											type='radio'
											name='years-of-experience'
											value='3-5'
											id='3-5'
											{{#if (equals form.years_of_experience '3-5')}}checked{{/if}}
										/>
										<label class='form-check-label' for='intern'>3-5 năm</label>
									</div>

									<div>
										<input
											class='form-check-input years-of-experience-box'
											type='radio'
											name='years-of-experience'
											value='5-10'
											id='5-10'
											{{#if (equals form.years_of_experience '5-10')}}checked{{/if}}
										/>
										<label class='form-check-label' for='remote'>5-10 năm</label>
									</div>

									<div>
										<input
											class='form-check-input years-of-experience-box'
											type='radio'
											name='years-of-experience'
											value='10+'
											id='10+'
											{{#if (equals form.years_of_experience '10+')}}checked{{/if}}
										/>
										<label class='form-check-label' for='remote'>Trên 10 năm</label>
									</div>
								</div>
							</div>
						</div>

						<!-- Categories -->
						<div class='widget mb-4 pb-4 border-bottom'>
							<h5 class='widget-title'>Kĩ năng</h5>
							<div class='mt-4 mb-0'>
									<select name='skills[]' class="selectpicker form-control" data-live-search="true" id="skills-picker" multiple>
										{{#each skills}}
											<option value="{{meta}}" {{#if isSelected}}selected{{/if}}>{{name}}</option>
										{{else}}
											<option>Hệ thống chưa có kỹ năng nào</option>
										{{/each}}
									</select>
								{{!-- <select
									name='skills[]'
									class='form-control'
									aria-label='Default select example'
									
									multiple
								>
									{{#each skills}}
										<option value={{meta}}>{{name}}</option>
									
									{{/each}}
								</select> --}}
							</div>
						</div>
						<!-- Categories -->
						<!-- Posted -->
						<div class='widget mb-4 pb-4 border-bottom'>
							<h5 class='widget-title'>Vị trí</h5>
							<div class='mt-4'>
								<div class='form-check mb-0'>
									<input
										class='form-check-input position-radio'
										type='radio'
										name='positions'
										value='fresher'
										{{#if (equals form.positions 'fresher')}}checked{{/if}}
									/>
									<label class='form-check-label' for='lasthour'>Fresher</label>
								</div>

								<div class='form-check mb-0'>
									<input
										class='form-check-input position-radio'
										type='radio'
										name='positions'
										value='junior'
										{{#if (equals form.positions 'junior')}}checked{{/if}}
									/>
									<label class='form-check-label' for='oneday'>Junior</label>
								</div>

								<div class='form-check mb-0'>
									<input
										class='form-check-input position-radio'
										type='radio'
										name='positions'
										value='senior'
										{{#if (equals form.positions 'senior')}}checked{{/if}}
									/>
									<label class='form-check-label' for='sevenday'>Senior</label>
								</div>

								<div class='form-check mb-0'>
									<input
										class='form-check-input position-radio'
										type='radio'
										name='positions'
										value='leader'
										{{#if (equals form.positions 'leader')}}checked{{/if}}
									/>
									<label class='form-check-label' for='onemonth'>Leader</label>
								</div>
							</div>
						</div>

						{{! Location }}
						<div class='widget mb-4 pb-4 border-bottom'>
							<h5 class='widget-title'>Nơi làm việc</h5>
							<div class='mt-4 mb-0'>
								<select
									name='locations'
									class='form-select form-control'
									id="location-box"
									aria-label='Default select example'
								>
									<option value="" disabled selected>Chọn nơi làm việc</option>
									<option value='ho-chi-minh'>TP HCM</option>
									<option value='da-nang'>Đà Nẵng</option>
									<option value='ha-noi'>Hà Nội</option>
								</select>
							</div>
						</div>
						<button type='submit' class='btn btn-primary'>Lọc</button>
						<button type="reset" class="btn btn-danger">Reset</button>
						<!-- Posted -->
					</form>
				</div>
			</div><!--end col-->

			<div class='col-lg-8 col-md-6 col-12 mt-4 mt-sm-0 pt-2 pt-sm-0'>
				<div class='row'>
					{{#each jobs}}
						<div class='col-lg-6 col-12 mt-4 p-2'>
							{{> jobItem job=. isAuth=../isAuth}}
						</div>
					{{else}}
						<div class='col-12'>
							<div class='alert alert-warning' role='alert'>
								<strong>Không có công việc nào!</strong>
							</div>
						</div>
					{{/each}}
				</div><!--end row-->

				{{#if jobs}}
					<div class='row pt-5'>
					<!-- PAGINATION START -->
					<div class='col-12'>
							{{> pagination 
								paginationClass="pagination justify-content-center mb-0"
								hasPreviousPage=hasPreviousPage
								previousPage=previousPage
								showStartEllipsis=showStartEllipsis
								pages=pages
								baseUrl=baseUrl
								hasNextPage=hasNextPage
								nextPage=nextPage
							}}
						</div><!--end col-->
						<!-- PAGINATION END -->
					</div><!--end row-->
				{{/if}}
			</div><!--end col-->
		</div><!--end row-->
	</div><!--end container-->
</section><!--end section-->
<!-- Job List End -->